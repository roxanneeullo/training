						<% flash.each do |key, value| %>
						       <div class="alert alert-danger"><%= value %></div>
						    <% end %>
<div class="text-center title">
	<h1>Departments</h1>
</div>

<div class="container">
	<div class="col-sm-6 col-md-4 col-md-offset-1">
	<%= button_to "New Department", new_department_path, method: :get, class: "btn btn-sm btn-danger" %>
</div>
</div>

<div class="container">
	<div class="row col-md-10 col-md-offset-1 custyle">
		<table class="table table-striped custab">
  		<thead>
    		<tr>
      		<th>Department name</th>
      		<th colspan="3"></th>
    		</tr>
  		</thead>
  	<tbody>
	  	<% @departments.each do |department| %>
      	<tr>
					<div class="col-md-3">
        	<td><%= department.department_name %></td>
				</div>
					<div class="col-md-3">
						<div class="container">
							<td class="text-center">
								<span class="glyphicon glyphicon-search"></span>
								<%= link_to 'View Users', department, :class => "btn btn-info btn-xs" %>
							</td>
						</div>
				</div>
				<div class="col-md-3">
					<div class="container">
						<td class="text-center">
							<span class="glyphicon glyphicon-edit"></span>
							<%= link_to 'Edit Department', edit_department_path(department), :class => "btn btn-info btn-xs" %>
						</td>
					</div>
        	 
				</div>
					<div class="col-md-3">
						<div class="container">
							<td class="text-center">
								<span class="glyphicon glyphicon-trash"></span>
								<%= link_to 'Delete', department, method: :delete, 
								data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %>
							</td>
						</div>
					</div>
      	</tr>
    		<% end %>
  		</tbody>
		</table>
	</div><!--row-->
</div><!--jumbo-->

<br>

<div class="text-center">
	<%= will_paginate @departments, renderer: BootstrapPagination::Rails %>
</div>

