
<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      	<% post.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
      </ul>
    </div>
  <% end %>
	
  <div class="container">
		<div class="col-lg-12">
			<div class="account-wall">
    		<h3><%= f.label :you_know_it_to_be_true %></h3>
				<%= f.text_area :content, size: "100x5", class: "form-control", required: "true", maxlength: 500, id: 'review_text' %>
			  <span id="counter" data-maximum-length="<%= @maximum_length %>"><%= @maximum_length %></span>
				
				<div class="container">
					<br>
				</div>
				<div class="pull-right">
					<%= f.submit "Post", class: "btn btn-lg btn-danger", id: 'post_btn'%>
				</div>
				<div class="container">
					<br>
				</div>
			</div>
  	</div>
	</div>
<% end %>
