<p id="notice"><%= notice %></p>
<h1>Newsfeed</h1>

<%= render 'form', post: @post %>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
			<td><%= image_tag post.user.avatar.url(:thumb) %></td>
			<td></td>
			<td>
				<%= post.user.first_name %><br/>
				<%= post.user.department.department_name %><br/>
				<%= post.content %><br/>
				<%= post.created_at %>
			</td>
		</tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @posts %></p>