<div class="jumbotron">
	<div class="row">
		<div class="col-sm-10 col-md-10 col-md-offset-1">
    	<h1 class="text-center title">Sign Up</h1>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
				  <%= devise_error_messages! %>
					<div class="account-wall">
						<form class="form-signin">
					  	<div class="container">
								<%= f.label :username %><br />
						  	<%= f.text_field :username, autofocus: true, class: "form-control"  %>
					  	</div>
					 	 	<div class="container">
								<%= f.label :avatar %>
								<%= f.file_field :avatar %>
								<%= image_tag @user.avatar.url(:thumb) %>
					  	</div>
					 	 	<div class="container">
					    	<%= f.label :email %><br />
					    	<%= f.email_field :email, class: "form-control" %>
					  	</div>
					 	 	<div class="container">
					    	<%= f.label :password %>
					    	<% if @minimum_password_length %>
					    		<em>(<%= @minimum_password_length %> characters minimum)</em>
					    	<% end %><br />
					    	<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
					  	</div>
					 	 	<div class="container">
						    <%= f.label :password_confirmation %><br />
						    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
					  	</div>
					 	 	<div class="container">
						    <%= f.label :first_name %><br />
						    <%= f.text_field :first_name, class: "form-control"  %>
					  	</div>
					 	 	<div class="container">
						    <%= f.label :last_name %><br />
						    <%= f.text_field :last_name, class: "form-control"  %>
					  	</div>
							<div class="container">
					    	<%= f.label :position %><br />
					    	<%= f.text_field :position, class: "form-control"  %>
							</div>
					 	 	<div class="container">
						    <%= f.label :department_id %><br />
								 <%= f.collection_select(:department_id, Department.all, :id, :department_name, { 					:prompt => 'Select Department' }, class: "form-control")  %>
							</div>
							<div class="container">
								<br>
							</div>
					   <div class="actions">
						   <%= f.submit "Sign in", class: "btn btn-lg btn-danger btn-block" %>
						 </div>
						 <div class ="field">
							 <%= render "devise/shared/links" %>
						 </div>
				   </form> 
				 <% end %>     
       </div><!--account-->
    	</div><!--login -->
		</div><!-- col-->
	</div><!-- row-->
</div><!-- jumb-->



