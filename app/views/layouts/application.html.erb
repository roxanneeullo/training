<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		
  </head>

  <body>
		
    <div class="container">
      <%= yield %>
    </div>
		
		<div id="user">
			<% if user_signed_in? %> 
				<%= current_user.first_name %> <br />
				<%= button_to 'Logout', destroy_user_session_path, method: :delete %> 
				<%= button_to 'Edit User', edit_user_registration_path, method: :get %>
				<%= button_to 'Users', users_path, method: :get %>
				<%= button_to 'Departments', departments_path, method: :get %>
				<%= button_to 'Posts', posts_path, method: :get %>
			<% end %>
			
		</div>

  </body>
</html>
