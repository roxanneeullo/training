<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		
  </head>
	
	<body>
  	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    	<div class="container">
       	<div class="navbar-header">
					
						<a class="navbar-brand" href=<%= users_path %>>Staff List</a>
					</div>
					<% if user_signed_in? %>
		        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		        	<ul class="nav navbar-nav">
		          	<li class=<%= 'active' if current_page?(users_path) %>><%= link_to 'Users', users_path, method: :get %></li>
		            <li class=<%= 'active' if current_page?(departments_path) %>><%= link_to 'Departments', departments_path, method: :get %></li>
		            <li class=<%= 'active' if current_page?(posts_path) %>><%= link_to 'Newsfeed', posts_path, method: :get %></li>
							</ul>
							<ul class="nav navbar-nav navbar-right">
								<li class=<%= 'active' if current_page?(edit_user_registration_path) %>>
									<a href="/users/<%= current_user.id %>">
										<%= current_user.first_name %> 
									</a>
								</li>
								<li><%= link_to 'Logout', destroy_user_session_path, data: { confirm: "Are you sure you want to logout?" }, method: :delete %> </li>
		            </ul>		
							</div>
					
					<% end %>
					</div>
  	</div><!--container-->
	</nav>
		
  <div class="container">
  	<%= yield %>
  </div>

  </body>
</html>
